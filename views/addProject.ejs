<!-- views/addProject.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Project - Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-gray-100">
    <%- include('partials/navbar', {page: '/solutions/addProject' }) %>

    <main class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white shadow-lg rounded-lg p-6">
                <h1 class="text-3xl font-bold text-gray-800 mb-8">Add Project</h1>
                
                <form action="/solutions/addProject" method="POST" class="space-y-6">
                    <!-- Title -->
                    <div>
                        <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
                        <input type="text" id="title" name="title" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    </div>

                    <!-- Feature Image URL -->
                    <div>
                        <label for="feature_img_url" class="block text-sm font-medium text-gray-700">Feature Image URL</label>
                        <input type="url" id="feature_img_url" name="feature_img_url" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    </div>

                    <!-- Sector -->
                    <div>
                        <label for="sector_id" class="block text-sm font-medium text-gray-700">Sector</label>
                        <select id="sector_id" name="sector_id" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                            <% sectors.forEach(sector => { %>
                                <option value="<%= sector.id %>"><%= sector.sector_name %></option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Short Intro -->
                    <div>
                        <label for="intro_short" class="block text-sm font-medium text-gray-700">Short Introduction</label>
                        <textarea id="intro_short" name="intro_short" rows="3" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
                    </div>

                    <!-- Short Summary -->
                    <div>
                        <label for="summary_short" class="block text-sm font-medium text-gray-700">Short Summary</label>
                        <textarea id="summary_short" name="summary_short" rows="3" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
                    </div>

                    <!-- Impact -->
                    <div>
                        <label for="impact" class="block text-sm font-medium text-gray-700">Impact</label>
                        <textarea id="impact" name="impact" rows="4" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
                    </div>

                    <!-- Original Source URL -->
                    <div>
                        <label for="original_source_url" class="block text-sm font-medium text-gray-700">Original Source URL</label>
                        <input type="url" id="original_source_url" name="original_source_url" required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button type="submit" 
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Add Project
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
</html>